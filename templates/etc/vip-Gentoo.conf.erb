# /etc/conf.d/ucarp: config file for /etc/init.d/ucarp
#
# managed by Puppet, local changes will be overwritten

# The network interface to bind to, for example 'eth0'
UCARP_INTERFACE="<%= scope.lookupvar('ucarp::vIf') %>"

# The persistent source address, (real IP), associated with this interface.
UCARP_SOURCEADDRESS="<%= scope.lookupvar('::ipaddress') %>"

# The IP address of the virtual server.
UCARP_VIRTUALADDRESS="<%= scope.lookupvar('ucarp::vIp') %>"

# The prefix length of the virtual server IP address
# For example 24 for a netmask of 255.255.255.0
UCARP_VIRTUALPREFIX="<%= scope.lookupvar('ucarp::vIpPrefixLength') %>"

# The id of the virtual server [1-255].
UCARP_VHID="<%= scope.lookupvar('ucarp::vId') %>"

# File to read the shared password from.
UCARP_PASSFILE="/etc/ucarp/ucarp-<%= scope.lookupvar('ucarp::vId') %>.pass"

# Specifies the command to run after ucarp has successfully become master.
UCARP_UPSCRIPT="<%= scope.lookupvar('ucarp::params::scriptDir') %>/<%= scope.lookupvar('ucarp::upscriptExec') %>"

# Specifies the command that is run after ucarp has transitioned to the backup
# state.
UCARP_DOWNSCRIPT="<%= scope.lookupvar('ucarp::params::scriptDir') %>/<%= scope.lookupvar('ucarp::downscriptExec') %>"

# Additional ucarp options to pass
UCARP_OPTS="<%= scope.lookupvar('ucarp::startupOptions') %>"
